{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "checkJs": true,
    "moduleResolution": "Node",
    "paths": {
      "$lib": ["lib"],
      "$lib/*": ["lib/*"]
    }
  },
  "include": [
    "**/*.d.ts",
    "lib/**/*.js",
    "static/**/*.js",
    "routes/**/*.svelte",
    "hooks.js",
    "global.d.ts"
  ]
}
